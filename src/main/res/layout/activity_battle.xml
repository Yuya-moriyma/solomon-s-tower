<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BattleActivity">

    <LinearLayout
        android:id="@+id/base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/area_skill_info"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:id="@+id/area_enemy_hp"
            android:layout_width="300dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:text="HP"
                android:textColor="#ff0000"
                android:textSize="20dp" />

            <ProgressBar
                android:id="@+id/bar_enemy_hp"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="100"
                android:progress="100" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/area_enemy_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/enemy_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/image_56" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/area_battle_info"
            style="@style/text_normal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_margin="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/frame_transparent"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.7"
                android:background="@drawable/frame_transparent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/player_icon"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:foreground="@drawable/frame_icon"
                        android:src="@drawable/icon_72" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="-8dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="17dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="HP"
                            android:textColor="#ff0000"
                            android:textSize="10dp" />

                        <ProgressBar
                            android:id="@+id/bar_player_hp"
                            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="58dp"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="100" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_transparent"
                        android:text="攻↑防↑封"
                        android:textSize="10dp"
                        android:textAlignment="center"/>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"></TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#00000000"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.7"
                    android:background="@drawable/frame_transparent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="アイテム使用: "
                        android:textSize="10dp"/>

                    <Spinner
                        android:id="@+id/spinner_item_list"
                        android:layout_marginRight="5dp"
                        android:spinnerMode="dialog"></Spinner>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-5dp"
                    android:layout_weight="0.3"
                    android:background="#00000000">

                    <TextView
                        style="@style/button_battle_attack"
                        android:layout_marginVertical="5dp"
                        android:layout_marginRight="2.5dp"
                        android:onClick="onAttack"/>

                    <TextView
                        style="@style/button_battle_change"
                        android:layout_marginVertical="5dp"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="5dp"
                        android:onClick="onChange"/>
                </TableRow>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>