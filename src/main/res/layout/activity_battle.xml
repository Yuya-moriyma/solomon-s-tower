<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BattleActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <!--敵HP-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/frame_transparent"
                android:orientation="vertical"
                android:paddingHorizontal="5dp">

                <LinearLayout
                    android:id="@+id/area_enemy_hp"
                    android:layout_width="300dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:text="HP"
                        android:textColor="#ff0000"
                        android:textSize="20dp" />

                    <ProgressBar
                        android:id="@+id/bar_enemy_hp"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:max="100"
                        android:progress="100" />
                </LinearLayout>
            </LinearLayout>

            <!--敵ステータスアイコン-->
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/background_transparent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_enemy_atk_up"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginHorizontal="2dp"
                    android:src="@drawable/atk_up"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/icon_enemy_defense_up"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginHorizontal="2dp"
                    android:src="@drawable/defense"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/icon_enemy_regenerate"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginHorizontal="2dp"
                    android:src="@drawable/regenerate"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/icon_enemy_sealed"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginHorizontal="2dp"
                    android:src="@drawable/sealed"
                    android:visibility="invisible"/>

            </LinearLayout>

            <!--スキル名-->
            <FrameLayout
                android:id="@+id/area_skill_name"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginHorizontal="24dp"
                android:alpha="0">

                <TextView
                    android:id="@+id/text_skill_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="スキル名"
                    android:textAlignment="center"
                    android:textSize="16dp" />
            </FrameLayout>

            <!--敵画像-->
            <FrameLayout
                android:id="@+id/area_enemy_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/enemy_image"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/image_56" />
            </FrameLayout>

            <!--戦闘メッセージ-->
            <FrameLayout
                android:id="@+id/area_battle_info"
                style="@style/text_normal"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_margin="4dp">

                <TextView
                    android:id="@+id/text_battle_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/frame_white"
                    android:gravity="center"
                    android:text=" スキル説明"
                    android:textAlignment="center"
                    android:textSize="16dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/frame_transparent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/player_icon"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:foreground="@drawable/frame_icon"
                        android:src="@drawable/icon_72" />

                    <!--味方HP-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="17dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="HP"
                            android:textColor="#ff0000"
                            android:textSize="10dp" />

                        <ProgressBar
                            android:id="@+id/bar_player_hp"
                            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="58dp"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="100" />
                    </LinearLayout>

                    <!--味方ステータスアイコン-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="-5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_player_atk_up"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/atk_up"
                            android:visibility="invisible"/>

                        <ImageView
                            android:id="@+id/icon_player_defense_up"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/defense"
                            android:visibility="invisible"/>

                        <ImageView
                            android:id="@+id/icon_player_regenerate"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/regenerate"
                            android:visibility="invisible"/>

                        <ImageView
                            android:id="@+id/icon_player_sealed"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/sealed"
                            android:visibility="invisible"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <!--攻撃ボタン-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/frame_transparent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_transparent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:text="アイテム使用: "
                                android:textSize="10dp" />

                            <Spinner
                                android:id="@+id/spinner_item_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:layout_marginRight="5dp"
                                android:spinnerMode="dialog" />
                        </LinearLayout>

                        <TextView
                            style="@style/button_battle_attack"
                            android:onClick="onAttack" />

                    </LinearLayout>

                    <!--交代ボタンt-->
                    <TextView
                        style="@style/button_battle_change"
                        android:onClick="onChange" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/dialog"
            style="@style/layout_base" />

        <FrameLayout
            android:id="@+id/effect"
            style="@style/layout_base" />
    </FrameLayout>
</RelativeLayout>