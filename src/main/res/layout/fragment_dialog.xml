<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_transparent"
    tools:context=".fragment.BattleReadyFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_pause">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/frame_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_header"
                style="@style/text_normal"
                android:text="- Attention -"
                android:textSize="20dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/dialog_message"
                style="@style/text_normal"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:lineSpacingMultiplier="1.2"
                android:text="既存のデータをすべて削除します。\nよろしいですか？" />

            <LinearLayout
                style="@style/layout_transparent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_action"
                    style="@style/button_dialog_action"
                    android:paddingHorizontal="50dp"
                    android:paddingVertical="10dp"
                    android:text="はい" />

                <TextView
                    style="@style/button_dialog_close"
                    android:paddingHorizontal="50dp"
                    android:paddingVertical="10dp"
                    android:text="いいえ" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>